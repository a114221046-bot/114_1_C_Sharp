using System;
using System.Collections.Generic;
using System.Drawing;
using System.IO;
using System.Linq;
using System.Windows.Forms;

namespace Q3
{
    public partial class Form1 : Form
    {
        private Random rnd = new Random();
        private int[] myNumbers = new int[5];
        private int[] winningNumbers = new int[5];
        private bool hasGenerated = false;
        private bool hasLoaded = false;

        public Form1()
        {
            InitializeComponent();
            // initialize displayed numbers
            myNumbers = new int[] { 40, 21, 23, 33, 47 };
            UpdateNumberLabels();

            // initial button states
            btnDraw.Enabled = false; // need either generated numbers or loaded winning numbers
        }

        private void UpdateNumberLabels()
        {
            lblNum1.Text = myNumbers.Length > 0 ? myNumbers[0].ToString() : "";
            lblNum2.Text = myNumbers.Length > 1 ? myNumbers[1].ToString() : "";
            lblNum3.Text = myNumbers.Length > 2 ? myNumbers[2].ToString() : "";
            lblNum4.Text = myNumbers.Length > 3 ? myNumbers[3].ToString() : "";
            lblNum5.Text = myNumbers.Length > 4 ? myNumbers[4].ToString() : "";
        }

        // generate n unique numbers between min and max using basic loops/arrays
        private int[] GenerateUniqueNumbers(int count, int min, int max)
        {
            int[] result = new int[count];
            int filled = 0;
            while (filled < count)
            {
                int candidate = rnd.Next(min, max + 1);
                bool exists = false;
                for (int i = 0; i < filled; i++)
                {
                    if (result[i] == candidate)
                    {
                        exists = true;
                        break;
                    }
                }
                if (!exists)
                {
                    result[filled] = candidate;
                    filled++;
                }
            }
            // simple sort (bubble sort) to keep numbers ordered using basic constructs
            for (int i = 0; i < count - 1; i++)
            {
                for (int j = 0; j < count - 1 - i; j++)
                {
                    if (result[j] > result[j + 1])
                    {
                        int tmp = result[j];
                        result[j] = result[j + 1];
                        result[j + 1] = tmp;
                    }
                }
            }
            return result;
        }

        private void btnGenerate_Click(object sender, EventArgs e)
        {
            myNumbers = GenerateUniqueNumbers(5, 1, 49);
            UpdateNumberLabels();
            lstLog.Items.Clear();
            lstLog.Items.Add("使用者號碼：");
            for (int i = 0; i < myNumbers.Length; i++)
            {
                lstLog.Items.Add($"第{ i + 1 }個號碼: { myNumbers[i] }");
            }
            hasGenerated = true;
            // enable draw if winning numbers are present (either loaded or generated by Draw)
            btnDraw.Enabled = true;
            lblMatchCount.Text = "中0個號碼";
            lblPrize.Text = "-";
        }

        private void btnDraw_Click(object sender, EventArgs e)
        {
            // if user has loaded winning numbers from file, use those; otherwise generate winning numbers
            if (!hasLoaded)
            {
                // generate 5 winning numbers (file spec says five lines)
                winningNumbers = GenerateUniqueNumbers(5, 1, 49);
            }

            // display winning numbers
            lstLog.Items.Clear();
            lstLog.Items.Add("本期開獎號碼：");
            for (int i = 0; i < winningNumbers.Length; i++)
            {
                lstLog.Items.Add($"第{ i + 1 }個號碼: { winningNumbers[i] }");
            }

            // compare using basic loops
            int match = 0;
            for (int i = 0; i < myNumbers.Length; i++)
            {
                for (int j = 0; j < winningNumbers.Length; j++)
                {
                    if (myNumbers[i] == winningNumbers[j])
                    {
                        match++;
                        break;
                    }
                }
            }

            lblMatchCount.Text = $"中{match}個號碼";
            lblPrize.Text = DeterminePrize(match);

            // after draw, reset loaded status
            hasLoaded = false;
            btnDraw.Enabled = true;
        }

        private string DeterminePrize(int matchCount)
        {
            // simple mapping: 5->頭獎,4->貳獎,3->參獎, else no prize
            if (matchCount >= 5) return "頭獎";
            if (matchCount == 4) return "貳獎";
            if (matchCount == 3) return "參獎";
            return "沒中獎";
        }

        private void btnExit_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void btnLoadFile_Click(object sender, EventArgs e)
        {
            OpenFileDialog ofd = new OpenFileDialog();
            ofd.Filter = "Text files (*.txt)|*.txt|All files (*.*)|*.*";
            ofd.Title = "選擇開獎號碼檔案 (每行一個數字，共5行)";
            if (ofd.ShowDialog() != DialogResult.OK) return;

            string path = ofd.FileName;
            try
            {
                string[] lines = File.ReadAllLines(path);
                if (lines.Length < 5)
                {
                    MessageBox.Show("檔案內容不足，需包含至少 5 行數字。", "檔案格式錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
                    return;
                }

                int[] loaded = new int[5];
                for (int i = 0; i < 5; i++)
                {
                    string line = lines[i].Trim();
                    int val;
                    if (!int.TryParse(line, out val))
                    {
                        MessageBox.Show($"第 {i + 1} 行不是有效整數: '{line}'", "格式錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
                        return;
                    }
                    if (val < 1 || val > 49)
                    {
                        MessageBox.Show($"第 {i + 1} 行數字 {val} 超出範圍 (1-49)。", "數值錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
                        return;
                    }
                    // check duplicates among loaded
                    for (int j = 0; j < i; j++)
                    {
                        if (loaded[j] == val)
                        {
                            MessageBox.Show($"第 {i + 1} 行數字 {val} 與前面行有重複。", "格式錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
                            return;
                        }
                    }
                    loaded[i] = val;
                }

                // sort loaded numbers (basic bubble sort)
                for (int i = 0; i < 4; i++)
                {
                    for (int j = 0; j < 4 - i; j++)
                    {
                        if (loaded[j] > loaded[j + 1])
                        {
                            int tmp = loaded[j];
                            loaded[j] = loaded[j + 1];
                            loaded[j + 1] = tmp;
                        }
                    }
                }

                winningNumbers = loaded;
                hasLoaded = true;

                lstLog.Items.Clear();
                lstLog.Items.Add("已讀取開獎號碼檔案：");
                for (int i = 0; i < winningNumbers.Length; i++)
                {
                    lstLog.Items.Add($"第{ i + 1 }個號碼: { winningNumbers[i] }");
                }

                // enable draw if user numbers exist
                if (hasGenerated || (myNumbers != null && myNumbers.Length == 5))
                {
                    btnDraw.Enabled = true;
                }
            }
            catch (FileNotFoundException)
            {
                MessageBox.Show("找不到指定檔案。", "檔案錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
            catch (IOException ex)
            {
                MessageBox.Show("讀取檔案時發生錯誤: " + ex.Message, "檔案錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
            catch (Exception ex)
            {
                MessageBox.Show("發生未預期的錯誤: " + ex.Message, "錯誤", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
    }
}
