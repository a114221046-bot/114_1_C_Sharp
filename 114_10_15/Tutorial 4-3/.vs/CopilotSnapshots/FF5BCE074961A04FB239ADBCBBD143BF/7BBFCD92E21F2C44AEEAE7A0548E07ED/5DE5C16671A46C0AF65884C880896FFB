using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Loan_Qualifier
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent(); // 初始化表單元件
        }

        // 當使用者點擊「資格審查」按鈕時執行
        private void checkButton_Click(object sender, EventArgs e)
        {
            // 設定最低年薪與最低年資常數
            const decimal MINIMUM_SALARY = 1200000m; // 最低年薪 120 萬
            const int MINIMUM_YEARS = 2; // 最低年資 2 年

            decimal salary; // 儲存使用者輸入的年薪
            int years0nJob; // 儲存使用者輸入的年資

            try
            {
                // 將年薪輸入字串轉換為 decimal 型別
                salary = decimal.Parse(salaryTextBox.Text);
                years0nJob = int.Parse(yearsTextBox.Text);

                if (salary >= MINIMUM_SALARY)
                { 
                    if (years0nJob >= MINIMUM_YEARS)
                    {
                        decisionLabel.Text = "符合資格。";
                    }
                    else
                    {
                        decisionLabel.Text = "年資不足，不符合資格。";
                    }

                }
                else
                {
                    decisionLabel.Text = "收入不足，不符合資格。";    


                }
            }
            catch (Exception ex)
            {
                // 若轉換失敗，顯示錯誤訊息
                MessageBox.Show("請輸入正確的年薪數字。", "輸入錯誤");
                salaryTextBox.Focus();
                return;}

           

        // 當使用者點擊「清除」按鈕時執行
        private void clearButton_Click(object sender, EventArgs e)
        {
            // 清空所有輸入欄位與結果標籤
            salaryTextBox.Text = "";
            yearsTextBox.Text = "";
            decisionLabel.Text = "";

            // 將游標移回年薪輸入欄位
            salaryTextBox.Focus();
        }

        // 當使用者點擊「離開」按鈕時執行
        private void exitButton_Click(object sender, EventArgs e)
        {
            // 關閉表單
            this.Close();
        }
    }
}
